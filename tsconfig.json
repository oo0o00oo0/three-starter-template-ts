{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["./src/*"],
      "@utils/*": ["./src/utils/*"],
      "@components/*": ["./src/components/*"],
      "@state/*": ["./src/state/*"],
      "@data/*": ["./src/data/*"],
      "@layout/*": ["./src/layout/*"],
      "@routing/*": ["./src/routing/*"]
    }, 
  },
  "include": ["src/**/*.tsx", "src/**/*.ts", "src", "global.d.ts"],
  "exclude": [
    "node_modules",
    "plugins",
    "public"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
